FILTERED_ARGS=()

function filter_legacy_args {
   farg="$1"
   farg="${farg/bindIP/bind-ip}"
   farg="${farg/configDir/config-dir}"
   farg="${farg/credentialFile/credential-file}"
   farg="${farg/advertisedIP/advertised-ip}"
   farg="${farg/advertisedPort/advertised-port}"
   farg="${farg/internalPort/internal-port}"
   farg="${farg/maxChildren/max-children}"
   FILTERED_ARGS+=("${farg}")
}

command=
help=
version="@PACKAGE_VERSION@"

for arg in "$@"
do
   case "$arg" in
      -d?*|--download=*)
         command="gtdownload"
         ;;

      -d|--download)
         command="gtdownload"
         continue           # don't add to filtered args
         ;;

      -u?*|--upload=*)
         command="gtupload"
         ;;

      -u|--upload)
         command="gtupload"
         continue           # don't add to filtered args
         ;;

      -s?*|--server=*)
         command="gtserver"
         ;;

      -s|--server)
         command="gtserver"
         continue           # don't add to filtered args
         ;;

      -h|--help)
         help="$arg"
         ;;

      --version)
         echo "GeneTorrent wrapper script release ${version}"
         for command in gtserver gtdownload gtupload; do
            if [ ! -z "$(which ${command} 2>/dev/null)" ]; then
               echo "${command}: $(${command} --version)"
            fi
         done
         exit 0
         ;;

      *)
         ;;
   esac

   filter_legacy_args "$arg"
done

if [ -z "${command}" ]; then
   if [ -n "${help}" ]; then
       echo -n "Invoke GeneTorrent with a '-d', '-u', or '-s' argument to indicate "
       echo    "operating mode."
       exit 0
   fi

   # Old behaviour of GeneTorrent was to default to server mode if no
   # mode was given.
   command="gtserver"
fi

if [ -z "$(which ${command} 2>/dev/null)" ]; then
   echo -n "Command ${command} was not found. Please verify that you have "
   echo    "installed it and that it is in your PATH."
   exit 1
fi

echo "GeneTorrent wrapper running: ${command} ${FILTERED_ARGS[@]}"
exec ${command} "${FILTERED_ARGS[@]}"
